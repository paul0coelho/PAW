<!DOCTYPE html>
<html>
  <head>
    <title>Detalhes da Doação</title>
    <link rel='stylesheet' href='/stylesheets/show.css' />
  </head>
  <body>
    <div class="header">
      <a href="/donations">
        <h1>Recicla Têxtil</h1>
      </a>
    </div>
    <div class="header2">
      <h2>Histórico de doações do doador</h2>
    </div>
    <div class="container">
      <% donations.forEach(donation => { %>
      <table>
        <tbody>
          <tr>
            <td>Contacto do doador</td>
            <td>:</td>
            <td><%= donation.phone %></td>
          </tr>
          <tr>
            <td>Número de Peças Superiores</td>
            <td>:</td>
            <td><%= donation.topPiecesNumber %></td>
          </tr>
          <tr>
            <td>Número de Peças Inferiores</td>
            <td>:</td>
            <td><%= donation.bottomPiecesNumber %></td>
          </tr>
          <tr>
            <td>Número de Peças de Roupa Interior</td>
            <td>:</td>
            <td><%= donation.underwearPiecesNumber %></td>
          </tr>
          <tr>
            <td>Pontos Obtidos</td>
            <td>:</td>
            <td><%= donation.gainedPoints %></td>
          </tr>
          <tr>
            <td>
              <img src="/images/donations/<%= donation._id %>.jpg">
            </td>
          </tr>
        </tbody>
      </table>
      <% }); %>
    </div>
  </body>
</html>