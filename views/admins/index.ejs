<!DOCTYPE html>
<html>
  <head>
    <title>Admin List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/admins/create">Create Admin</a></h3>
      <h1>Admin List</h1>
      <% if(admins.length>0) { %>
      <table class="list-table">
        <thead>
          <tr>
            <th>Admin Name</th>
            <th>Position</th>
          </tr>
        </thead>
        <tbody>

          <% for(var i=0; i<admins.length;i++) { %>
            <tr>
              <td><a href="/admins/show/<%= admins[i]._id%>"><%= admins[i].name%></a></td>
              <td><%= admins[i].position%></td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <% } else { %>
        <div>No admins found.</div>
      <% } %>
    </div>
  </body>
</html>
